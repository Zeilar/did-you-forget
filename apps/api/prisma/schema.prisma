generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DB_URL")
}

model Notification {
  id String @id @default(uuid())
  title String
  time DateTime
  repeat Int[] // Unique ints ranging 0-6, each number representing the day's index of the week.
  reminders Int[] // Unique UNIX timestamp offsets, e.g 1000 would mean a reminder 1000 milliseconds prior.
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User @relation(fields: [userId], references: [id])
  userId String
}

model User {
  id String @id @default(uuid())
  email String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  notifications Notification[]
}
